<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cuit.hyl.graduation.sys.dao.TbRoleDao">

    <resultMap id="roleTree" type="cuit.hyl.graduation.sys.entity.vo.RoleTree">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="enname" column="enname" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap type="cuit.hyl.graduation.sys.entity.TbRole" id="TbRoleMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="enname" column="enname" jdbcType="VARCHAR"/>
        <result property="description" column="description" jdbcType="VARCHAR"/>
        <result property="created" column="created" jdbcType="TIMESTAMP"/>
        <result property="updated" column="updated" jdbcType="TIMESTAMP"/>
        <result property="type" column="type" jdbcType="INTEGER"/>
    </resultMap>

    <select id="queryAllRole" resultMap="TbRoleMap">
        select
          id, name, enname, description, created, updated, type
        from graduation_authority.tb_role
        <where>
            <if test="name != null and name != '' ">
                and name = #{name}
            </if>
            <if test="enname != null and enname != '' ">
                and enname = #{enname}
            </if>
            <if test="description != null and description != ''">
                and description like "%"#{description}"%"
            </if>
        </where>
    </select>

    <!--新增角色-->
    <insert id="insertRole" >
        INSERT INTO graduation_authority.tb_role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                id,
            </if>
            <if test="name != null and '' != name">
                name,
            </if>
            <if test="enname != null and '' != enname">
                enname,
            </if>
            <if test="description != null and '' != description">
                description,
            </if>
            <if test="type != null and '' != type">
                type,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                #{id},
            </if>
            <if test="name != null and '' != name">
                #{name},
            </if>
            <if test="enname != null and '' != enname">
                #{enname},
            </if>
            <if test="description != null and '' != description">
                #{description},
            </if>
            <if test="type != null and '' != type">
                #{type},
            </if>
        </trim>
    </insert>

    <update id="updateRole">
        UPDATE graduation_authority.tb_role
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and '' != name">
                name= #{name},
            </if>
            <if test="enname != null and '' != enname">
                enname= #{enname},
            </if>
            <if test="description != null and '' != description">
                description= #{description},
            </if>
            <if test="type != null and '' != type">
                type = #{type},
            </if>
        </trim>
        where id= #{id}
    </update>

    <!--删除角色-->
    <delete id="deleteRole">
        DELETE FROM graduation_authority.tb_role WHERE id = #{id}
    </delete>

    <!--批量删除-->
    <delete id="multipleDeleteRole">
        DELETE FROM graduation_authority.tb_role WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- *********************************************************- -->
    <!--通过用户id查询角色-->
    <select id="queryByUserId" resultMap="roleTree">
        SELECT
            r.id,
            r.`name`,
            r.enname,
            r.description
        FROM
            graduation_authority.tb_user_role AS ur
                LEFT JOIN graduation_authority.tb_role AS r ON ur.role_id = r.id
        WHERE
            ur.user_id = #{id}
    </select>
    <select id="queryByUserIds" resultType="Long">
        SELECT
            r.id
        FROM
            graduation_authority.tb_user_role AS ur
                LEFT JOIN graduation_authority.tb_role AS r ON ur.role_id = r.id
        WHERE
            ur.user_id = #{id}
    </select>

    <select id="roleTree" resultMap="roleTree">
        SELECT r.id,
               r.parent_id,
               r.`name`,
               r.enname,
               r.description
        FROM graduation_authority.tb_role r WHERE type = #{id}
    </select>

    <!--删除用户角色-->
    <delete id="deleteUserRole">
        DELETE FROM graduation_authority.tb_user_role WHERE id = #{id}
    </delete>

    <!--批量删除用户角色-->
    <delete id="multipleDeleteUserRole">
        DELETE FROM graduation_authority.tb_user_role WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--删除某用户所有角色-->
    <delete id="multipleDeleteAllUserRole">
        DELETE FROM graduation_authority.tb_user_role WHERE user_id = #{id}
    </delete>

    <!--新增用户角色-->
    <insert id="insertUserRole" >
        INSERT INTO graduation_authority.tb_user_role  (user_id, role_id) VALUES (#{userId},#{roleId})
    </insert>

    <insert id="multipleInsertUserRole">
        INSERT INTO graduation_authority.tb_user_role (id, user_id, role_id) VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id},#{item.userId},#{item.roleId})
        </foreach>
    </insert>

</mapper>
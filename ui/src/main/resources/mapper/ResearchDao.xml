<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cuit.hyl.graduation.project_ui.dao.ResearchDao">

    <resultMap type="cuit.hyl.graduation.project_ui.entity.Research" id="ResearchMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="researchAreas" column="RESEARCH_AREAS" jdbcType="INTEGER"/>
        <result property="thesisResults" column="THESIS_RESULTS" jdbcType="INTEGER"/>
        <result property="patent" column="PATENT" jdbcType="INTEGER"/>
        <result property="achievements" column="ACHIEVEMENTS" jdbcType="INTEGER"/>
        <result property="researchProjects" column="RESEARCH_PROJECTS" jdbcType="INTEGER"/>
        <result property="researchTeam" column="RESEARCH_TEAM" jdbcType="INTEGER"/>
        <result property="peopleId" column="PEOPLE_ID" jdbcType="INTEGER"/>
        <result property="uploadTime" column="UPLOAD_TIME" jdbcType="TIMESTAMP"/>
    </resultMap>
    <resultMap type="cuit.hyl.graduation.project_ui.entity.ResearchItem" id="ResearchItemMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="itemName" column="ITEM_NAME" jdbcType="VARCHAR"/>
        <result property="itemContent" column="ITEM_CONTENT" jdbcType="OTHER"/>
        <result property="parentId" column="PARENT_ID" jdbcType="INTEGER"/>
        <result property="type" column="TYPE" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="initInfo" resultMap="ResearchMap">
        select
          ID, RESEARCH_AREAS, THESIS_RESULTS, PATENT, ACHIEVEMENTS, RESEARCH_PROJECTS, RESEARCH_TEAM, PEOPLE_ID, UPLOAD_TIME
        from graduation_ui.research
        where PEOPLE_ID = #{id} AND VERSION = #{version}
        order by UPLOAD_TIME desc
    </select>

    <select id="queryItems" resultMap="ResearchItemMap">
        select
            *
        from graduation_ui.research_item
        where PARENT_ID = #{id} and TYPE = #{type}
    </select>


    <insert id="insertResearch">
        INSERT INTO graduation_ui.research
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                ID,
            </if>
            <if test="researchAreas != null and '' != researchAreas">
                RESEARCH_AREAS,
            </if>
            <if test="thesisResults != null and '' != thesisResults">
                THESIS_RESULTS,
            </if>
            <if test="patent != null and '' != patent">
                PATENT,
            </if>
            <if test="achievements != null and '' != achievements">
                ACHIEVEMENTS,
            </if>
            <if test="researchProjects != null and '' != researchProjects">
                RESEARCH_PROJECTS,
            </if>
            <if test="researchTeam != null and '' != researchTeam">
                RESEARCH_TEAM,
            </if>
            <if test="peopleId != null and '' != peopleId">
                PEOPLE_ID,
            </if>
            <if test="uploadTime != null">
                UPLOAD_TIME,
            </if>
            <if test="version != null and '' != version">
                VERSION,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                #{id},
            </if>
            <if test="researchAreas != null and '' != researchAreas">
                #{researchAreas},
            </if>
            <if test="thesisResults != null and '' != thesisResults">
                #{thesisResults},
            </if>
            <if test="patent != null and '' != patent">
                #{patent},
            </if>
            <if test="achievements != null and '' != achievements">
                #{achievements},
            </if>
            <if test="researchProjects != null and '' != researchProjects">
                #{researchProjects},
            </if>
            <if test="researchTeam != null and '' != researchTeam">
                #{researchTeam},
            </if>
            <if test="peopleId != null and '' != peopleId">
                #{peopleId},
            </if>
            <if test="uploadTime != null">
                #{uploadTime},
            </if>
            <if test="version != null and '' != version">
                #{version},
            </if>
        </trim>
    </insert>

    <insert id="insertResearchItem">
        INSERT INTO graduation_ui.research_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                ID,
            </if>
            <if test="itemName != null and '' != itemName">
                ITEM_NAME,
            </if>
            <if test="itemContent != null and '' != itemContent">
                ITEM_CONTENT,
            </if>
            <if test="parentId != null and '' != parentId">
                PARENT_ID,
            </if>
            <if test="type != null and '' != type">
                TYPE,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                #{id},
            </if>
            <if test="itemName != null and '' != itemName">
                #{itemName},
            </if>
            <if test="itemContent != null and '' != itemContent">
                #{itemContent},
            </if>
            <if test="parentId != null and '' != parentId">
                #{parentId},
            </if>
            <if test="type != null and '' != type">
                #{type},
            </if>
        </trim>
    </insert>
    <update id="updateResearchItem" >
        UPDATE graduation_ui.research_item
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null and '' != id">
                ID = #{id},
            </if>
            <if test="itemName != null and '' != itemName">
                ITEM_NAME = #{itemName},
            </if>
            <if test="itemContent != null and '' != itemContent">
                ITEM_CONTENT = #{itemContent},
            </if>
            <if test="parentId != null and '' != parentId">
                PARENT_ID = #{parentId},
            </if>
            <if test="type != null and '' != type">
                TYPE = #{type},
            </if>
        </trim>
        where id= #{id}
    </update>
    <delete id="deleteResearchItem">
        DELETE FROM graduation_ui.research_item WHERE id = #{id}
    </delete>


</mapper>
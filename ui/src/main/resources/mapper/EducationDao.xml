<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cuit.hyl.graduation.project_ui.dao.EducationDao">

    <resultMap type="cuit.hyl.graduation.project_ui.entity.Education" id="EducationMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="schoole" column="SCHOOLE" jdbcType="VARCHAR"/>
        <result property="degree" column="DEGREE" jdbcType="VARCHAR"/>
        <result property="subject" column="SUBJECT" jdbcType="VARCHAR"/>
        <result property="startTime" column="START_TIME" jdbcType="TIMESTAMP"/>
        <result property="endTime" column="END_TIME" jdbcType="TIMESTAMP"/>
        <result property="peopleId" column="PEOPLE_ID" jdbcType="INTEGER"/>
        <result property="uploadTime" column="UPLOAD_TIME" jdbcType="TIMESTAMP"/>
        <result property="version" column="VERSION" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap type="cuit.hyl.graduation.project_ui.entity.vo.Versions" id="VersionsMap">
        <result property="uploadTime" column="UPLOAD_TIME" jdbcType="TIMESTAMP"/>
        <result property="version" column="VERSION" jdbcType="INTEGER"/>
    </resultMap>

    <!--最新消息查询-->
    <!--<select id="queryInitInfo" resultMap="EducationMap">
        select
            ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID, VERSION
        from graduation_ui.education
        where PEOPLE_ID = #{id} AND VERSION = ( SELECT MAX( VERSION ) FROM graduation_ui.education )
        order by START_TIME desc
    </select>-->
    <select id="queryInitInfo" resultMap="EducationMap">
        select
            ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID, VERSION
        from graduation_ui.education
        where PEOPLE_ID = #{id} AND VERSION = #{version}
        order by START_TIME desc
    </select>

    <!--新增一项-->
    <insert id="insertItem">
        INSERT INTO graduation_ui.education
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                ID,
            </if>
            <if test="schoole != null and '' != schoole">
                SCHOOLE,
            </if>
            <if test="degree != null and '' != degree">
                DEGREE,
            </if>
            <if test="subject != null and '' != subject">
                SUBJECT,
            </if>
            <if test="startTime != null ">
                START_TIME,
            </if>
            <if test="endTime != null">
                END_TIME,
            </if>
            <if test="peopleId != null and '' != peopleId">
                PEOPLE_ID,
            </if>
            <if test="uploadTime != null ">
                UPLOAD_TIME,
            </if>
            <if test="version != null and '' != version">
                VERSION,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and '' != id">
                #{id},
            </if>
            <if test="schoole != null and '' != schoole">
                #{schoole},
            </if>
            <if test="degree != null and '' != degree">
                #{degree},
            </if>
            <if test="subject != null and '' != subject">
                #{subject},
            </if>
            <if test="startTime != null ">
                #{startTime},
            </if>
            <if test="endTime != null ">
                #{endTime},
            </if>
            <if test="peopleId != null and '' != peopleId">
                #{peopleId},
            </if>
            <if test="uploadTime != null ">
                #{uploadTime},
            </if>
            <if test="version != null and '' != version">
                #{version},
            </if>
        </trim>
    </insert>
    <!-- 修改  -->
    <update id="updateItem" >
    UPDATE graduation_ui.education
    <trim prefix="SET" suffixOverrides=",">
        <if test="id != null and '' != id">
            ID = #{id},
        </if>
        <if test="schoole != null and '' != schoole">
            SCHOOLE = #{schoole},
        </if>
        <if test="degree != null and '' != degree">
            DEGREE = #{degree},
        </if>
        <if test="subject != null and '' != subject">
            SUBJECT = #{subject},
        </if>
        <if test="startTime != null ">
            START_TIME = #{startTime},
        </if>
        <if test="endTime != null">
            END_TIME = #{endTime},
        </if>
        <if test="peopleId != null and '' != peopleId">
            PEOPLE_ID = #{peopleId},
        </if>
        <if test="uploadTime != null ">
            UPLOAD_TIME = #{uploadTime},
        </if>
        <if test="version != null and '' != version">
            VERSION = #{version},
        </if>
    </trim>
        where id= #{id}
    </update>
    <!--删除一项-->
    <delete id="deleteItem">
        DELETE FROM graduation_ui.education WHERE id = #{id}
    </delete>

    <!--批量新增-->
    <insert id="insertForeach">
        INSERT INTO graduation_ui.education (ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID, VERSION)
        VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id},
            #{item.schoole},
            #{item.degree},
            #{item.subject},
            #{item.startTime},
            #{item.endTime},
            #{item.peopleId},
            #{item.version}
            )
        </foreach>
    </insert>


    <!--通过版本查询 -->
    <select id="queryByVersion" resultMap="EducationMap">
        select
            ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID, VERSION
        from graduation_ui.education
        where PEOPLE_ID = #{id} and VERSION = #{version}
        order by START_TIME desc
    </select>


    <!--查询所有版本号 -->
    <select id="queryAllVersion" resultMap="VersionsMap">
        SELECT DISTINCT VERSION, UPLOAD_TIME FROM graduation_ui.education where PEOPLE_ID = #{id};
    </select>

    <!-- excel 导出所有 -->
    <select id="queryAll" resultMap="EducationMap">
        select
            ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID, VERSION
        from graduation_ui.education
        where PEOPLE_ID = #{id}
        order by VERSION desc ,START_TIME desc
    </select>

    <!-- easyPoi导入 -->
    <insert id="easyExcelImport">
        INSERT INTO graduation_ui.education  (ID, SCHOOLE, DEGREE, SUBJECT, START_TIME, END_TIME, PEOPLE_ID)
        VALUES
        <foreach collection="list" item="education" separator=",">
            (#{education.id},#{education.schoole},#{education.degree},#{education.subject},#{education.startTime},#{education.endTime},#{education.peopleId})
        </foreach>
    </insert>

</mapper>
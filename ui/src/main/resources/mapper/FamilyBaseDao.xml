    </insert>
    <!-- 修改  -->
    <update id="updateItem" >
        UPDATE graduation_ui.family_member
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null and '' != id">
                ID = #{id},
            </if>
            <if test="avatarType != null and '' != avatarType">

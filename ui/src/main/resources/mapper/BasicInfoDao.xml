    <!--通过用户id 查询初始化信息-->
    <select id="queryInitInfo" resultMap="InitInfoMap">
        SELECT
            BI.ID,
            BI.NAME,
            BI.NICK_NAME,
            BI.AVATAT_URL,
            BI.BLOG,
            S.ICON,
            S.NAME AS school
        FROM
            graduation_ui.basic_info AS BI
            LEFT JOIN graduation_ui.school AS S
            ON BI.SCHOOL_ID = S.CODE
        WHERE
            PEOPLE_ID = #{id}
        order by TIME desc
    </select>

    <insert id="easyPoiExcelImport">

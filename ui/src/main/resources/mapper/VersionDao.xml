<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cuit.hyl.graduation.project_ui.dao.VersionDao">

    <resultMap type="cuit.hyl.graduation.project_ui.entity.Version" id="VersionMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="name" column="NAME" jdbcType="VARCHAR"/>
        <result property="sign" column="SIGN" jdbcType="VARCHAR"/>
        <result property="remarks" column="REMARKS" jdbcType="VARCHAR"/>
        <result property="peopleId" column="PEOPLE_ID" jdbcType="INTEGER"/>
        <result property="time" column="TIME" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="VersionMap">
        select
          ID, NAME, SIGN, REMARKS, PEOPLE_ID, TIME
        from graduation_ui.version
        where ID = #{id}
    </select>


    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="VersionMap">
        select
          ID, NAME, SIGN, REMARKS, PEOPLE_ID, TIME
        from graduation_ui.version
        where PEOPLE_ID = #{id}
        order by TIME desc
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into graduation_ui.version(ID, NAME, SIGN, REMARKS, PEOPLE_ID, TIME)
        values (#{id}, #{name}, #{sign}, #{remarks}, #{peopleId}, #{time})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update graduation_ui.version
        <set>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="sign != null and sign != ''">
                SIGN = #{sign},
            </if>
            <if test="peopleId != null">
                PEOPLE_ID = #{peopleId},
            </if>
            <if test="time != null">
                TIME = #{time},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from graduation_ui.version where ID = #{id}
    </delete>

</mapper>